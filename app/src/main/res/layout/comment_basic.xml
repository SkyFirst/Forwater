<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></View>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <com.example.lyk.forwater.activities.RoundImageView android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/c_header"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/water"
           />
        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="5dp"
                android:id="@+id/c_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="5dp"
                android:id="@+id/c_time"
                android:layout_below="@+id/c_name"
                />
        </RelativeLayout>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/c_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_replay"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"
        />

</LinearLayout>